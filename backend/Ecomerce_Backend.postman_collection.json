{
  "info": {
    "name": "E-commerce Backend API",
    "_postman_id": "ecomerce-backend-2024",
    "description": "Colección completa de endpoints del backend E-commerce",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080/api",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "1. Autenticación",
      "item": [
        {
          "name": "Registrar Usuario ADMIN",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "register"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"numeroDocumento\": \"admin\",\n  \"tipoDocumento\": \"CC\",\n  \"password\": \"admin123\",\n  \"nombre\": \"Administrador\",\n  \"apellido\": \"Sistema\",\n  \"telefono\": \"3001234567\",\n  \"direccion\": \"Calle Admin 123\",\n  \"correo\": \"admin@ecomerce.com\",\n  \"rol\": \"ADMIN\"\n}"
            }
          }
        },
        {
          "name": "Registrar Usuario Normal",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "register"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"numeroDocumento\": \"12345678\",\n  \"tipoDocumento\": \"CC\",\n  \"password\": \"user123\",\n  \"nombre\": \"Juan\",\n  \"apellido\": \"Pérez\",\n  \"telefono\": \"3009876543\",\n  \"direccion\": \"Calle 123 #45-67\",\n  \"correo\": \"juan@example.com\",\n  \"rol\": \"USER\"\n}"
            }
          }
        },
        {
          "name": "Login Admin",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "pm.collectionVariables.set(\"token\", jsonData.token);"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"numeroDocumento\": \"admin\",\n  \"password\": \"admin123\"\n}"
            }
          }
        },
        {
          "name": "Login Usuario",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "pm.collectionVariables.set(\"token\", jsonData.token);"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"numeroDocumento\": \"12345678\",\n  \"password\": \"user123\"\n}"
            }
          }
        }
      ]
    },
    {
      "name": "2. Categorías",
      "item": [
        {
          "name": "Listar Todas las Categorías",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/categorias",
              "host": ["{{baseUrl}}"],
              "path": ["categorias"]
            }
          }
        },
        {
          "name": "Listar Categorías Activas",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/categorias/activas",
              "host": ["{{baseUrl}}"],
              "path": ["categorias", "activas"]
            }
          }
        },
        {
          "name": "Obtener Categoría por ID",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/categorias/1",
              "host": ["{{baseUrl}}"],
              "path": ["categorias", "1"]
            }
          }
        },
        {
          "name": "Crear Categoría (ADMIN)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/categorias",
              "host": ["{{baseUrl}}"],
              "path": ["categorias"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"nombre\": \"Frutas\",\n  \"descripcion\": \"Frutas frescas y orgánicas\",\n  \"activo\": true\n}"
            }
          }
        },
        {
          "name": "Actualizar Categoría (ADMIN)",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/categorias/1",
              "host": ["{{baseUrl}}"],
              "path": ["categorias", "1"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"nombre\": \"Frutas Frescas\",\n  \"descripcion\": \"Frutas frescas de la región\",\n  \"activo\": true\n}"
            }
          }
        },
        {
          "name": "Cambiar Estado Categoría (ADMIN)",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/categorias/1/estado?activo=false",
              "host": ["{{baseUrl}}"],
              "path": ["categorias", "1", "estado"],
              "query": [
                {
                  "key": "activo",
                  "value": "false"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "3. Subcategorías",
      "item": [
        {
          "name": "Listar Todas las Subcategorías",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/subcategorias",
              "host": ["{{baseUrl}}"],
              "path": ["subcategorias"]
            }
          }
        },
        {
          "name": "Subcategorías por Categoría",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/subcategorias/categoria/1",
              "host": ["{{baseUrl}}"],
              "path": ["subcategorias", "categoria", "1"]
            }
          }
        },
        {
          "name": "Crear Subcategoría (ADMIN)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/subcategorias",
              "host": ["{{baseUrl}}"],
              "path": ["subcategorias"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"nombre\": \"Cítricos\",\n  \"descripcion\": \"Naranjas, limones, mandarinas\",\n  \"activo\": true,\n  \"categoria\": {\n    \"id\": 1\n  }\n}"
            }
          }
        }
      ]
    },
    {
      "name": "4. Productos",
      "item": [
        {
          "name": "Listar Productos Activos",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/productos/activos",
              "host": ["{{baseUrl}}"],
              "path": ["productos", "activos"]
            }
          }
        },
        {
          "name": "Obtener Producto por ID",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/productos/1",
              "host": ["{{baseUrl}}"],
              "path": ["productos", "1"]
            }
          }
        },
        {
          "name": "Crear Producto (USER/ADMIN)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/productos",
              "host": ["{{baseUrl}}"],
              "path": ["productos"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"nombre\": \"Naranjas Valencia\",\n  \"descripcion\": \"Naranjas frescas de Valencia, 1kg\",\n  \"precio\": 2500,\n  \"stock\": 100,\n  \"fechaCosecha\": \"2024-01-15\",\n  \"activo\": true,\n  \"categoria\": {\n    \"id\": 1\n  },\n  \"subcategoria\": {\n    \"id\": 1\n  },\n  \"usuario\": {\n    \"numeroDocumento\": \"12345678\"\n  }\n}"
            }
          }
        },
        {
          "name": "Actualizar Producto (USER/ADMIN)",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/productos/1",
              "host": ["{{baseUrl}}"],
              "path": ["productos", "1"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"nombre\": \"Naranjas Valencia Premium\",\n  \"descripcion\": \"Naranjas frescas de Valencia - Calidad Premium\",\n  \"precio\": 3000,\n  \"stock\": 80\n}"
            }
          }
        }
      ]
    },
    {
      "name": "5. Usuarios (ADMIN)",
      "item": [
        {
          "name": "Listar Todos los Usuarios",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/usuarios",
              "host": ["{{baseUrl}}"],
              "path": ["usuarios"]
            }
          }
        },
        {
          "name": "Obtener Usuario por Documento",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/usuarios/12345678",
              "host": ["{{baseUrl}}"],
              "path": ["usuarios", "12345678"]
            }
          }
        },
        {
          "name": "Cambiar Rol de Usuario",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/usuarios/12345678/rol?rol=ADMIN",
              "host": ["{{baseUrl}}"],
              "path": ["usuarios", "12345678", "rol"],
              "query": [
                {
                  "key": "rol",
                  "value": "ADMIN"
                }
              ]
            }
          }
        },
        {
          "name": "Cambiar Estado de Usuario",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/usuarios/12345678/estado?activo=false",
              "host": ["{{baseUrl}}"],
              "path": ["usuarios", "12345678", "estado"],
              "query": [
                {
                  "key": "activo",
                  "value": "false"
                }
              ]
            }
          }
        }
      ]
    }
  ]
}
